<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corner_top"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="80dp"
            android:layout_height="4dp"
            android:padding="@dimen/small_padding"
            android:background="@color/textGray"
            android:layout_gravity="center"/>
    <LinearLayout
        android:id="@+id/userDetailsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/userDetails"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/languageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/language" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/language"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/langType"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_marginLeft="@dimen/small_padding"
                android:textColor="@color/textGray"
                android:textSize="@dimen/small_font" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_gray" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/biometric" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/biometricAuthentication"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <Switch
            android:id="@+id/biometricSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/appColor"
           />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/change_pin"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/changePasscode"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/resetTokenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rest_password" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/resetToken"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_gray" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/addTokenLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/change_pin"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_weight="1"
                android:text="@string/addToken"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_font"
                android:textFontWeight="@integer/material_motion_duration_long_2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_gray" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/renameUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/change_pin"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_weight="1"
                android:text="@string/renameUser"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_font"
                android:textFontWeight="@integer/material_motion_duration_long_2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_gray" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/faqLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/info" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_weight="1"
            android:text="@string/FAQs"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_font"
            android:textFontWeight="@integer/material_motion_duration_long_2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_gray" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/aboutLayout"
            android:layout_marginTop="@dimen/xl_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginRight="@dimen/padding"
            android:layout_marginBottom="@dimen/padding">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/about" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_weight="1"
                android:text="@string/about"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_font"
                android:textFontWeight="@integer/material_motion_duration_long_2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_gray" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/deleteUserLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/delete_user"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_weight="1"
                android:text="@string/deleteUser"
                android:textColor="@color/red"
                android:textSize="@dimen/medium_font"
                android:textFontWeight="@integer/material_motion_duration_long_2" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_gray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>