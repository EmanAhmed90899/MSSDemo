<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/loading_view"
        layout="@layout/loading_view" />,

    <LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".view.identification.IdentificationView">

    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/arrow" />

    <com.hemaya.mssdemo.view.identification.StepperLineView
        android:id="@+id/stepperLine"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginBottom="@dimen/padding"
        android:background="@color/whiteGray" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/large_padding"
        android:paddingTop="@dimen/padding"
        android:paddingRight="@dimen/large_padding"
        android:paddingBottom="@dimen/padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleStepper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"
                android:layout_weight="1"
                android:text="Identification"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/medium_font" />

            <TextView
                android:id="@+id/changeLang"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/border_edittext"
                android:gravity="center"
                android:text="@string/langType"
                android:textColor="@color/appColor" />

        </LinearLayout>

        <TextView
            android:id="@+id/contentStepper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textColor="@color/textGray"
            android:textSize="@dimen/small_font" />

        <FrameLayout
            android:id="@+id/stepContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/large_padding"
            android:layout_marginRight="@dimen/xl_padding"
            android:layout_marginLeft="@dimen/xl_padding"
            android:background="@drawable/button_drawable"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progressBarNext"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/xxl_padding"
                android:layout_marginRight="@dimen/xxl_padding"
                android:indeterminateTint="@color/white"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/nextTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/textGray"
                android:textSize="@dimen/small_font" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>