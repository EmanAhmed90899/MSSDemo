<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/large_padding"
    android:layout_marginBottom="@dimen/padding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/arrow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_padding"
            android:paddingTop="@dimen/padding"
            android:paddingRight="@dimen/large_padding"
            android:paddingBottom="@dimen/padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginBottom="@dimen/padding"
                android:text="@string/changePasscode"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/medium_font" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_pin_description"
                android:textColor="@color/textGray"
                android:textSize="@dimen/small_font" />

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/xl_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_old_pin"
                android:textColor="@color/black"
                android:textSize="@dimen/small_font" />

            <EditText
                android:id="@+id/et_old_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:inputType="numberPassword"
                android:nextFocusDown="@id/et_new_pin"
                android:padding="@dimen/small_padding"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/textGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:text="@string/enter_new_pin"
                android:textColor="@color/black"
                android:textSize="@dimen/small_font" />

            <EditText
                android:id="@+id/et_new_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:inputType="numberPassword"
                android:nextFocusDown="@id/et_new_pin_repeat"
                android:padding="@dimen/small_padding"
                android:singleLine="true"
                android:maxLength="6"
                android:textColor="@color/textGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_padding"
                android:text="@string/enter_new_pin_repeated"
                android:textColor="@color/black"
                android:textSize="@dimen/small_font" />

            <EditText
                android:id="@+id/et_new_pin_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_grey"
                android:inputType="numberPassword"
                android:padding="@dimen/small_padding"
                android:singleLine="true"
                android:maxLength="6"
                android:textColor="@color/textGray" />

            <TextView
                android:id="@+id/errorPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xxl_padding"
                android:textColor="@color/red"
                android:textSize="@dimen/small_font" />


            <android.widget.Button
                android:id="@+id/changePin"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/xxl_padding"
                android:background="@drawable/button_drawable"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>