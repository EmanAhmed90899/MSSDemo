<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:layout_marginBottom="@dimen/padding"
    android:layout_marginTop="@dimen/large_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/arrow" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changePasscode"
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:textColor="@color/secondaryColor"
                android:textSize="@dimen/medium_font"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_pin_description"
                android:textColor="@color/textGray"
                android:textSize="@dimen/small_font" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_old_pin"
        android:textSize="@dimen/small_font"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_old_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:inputType="numberPassword"
        android:singleLine="true"
        android:nextFocusDown="@string/national_idOrPassport"
        android:textColor="@color/textGray"
        android:background="@drawable/border_grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_new_pin"
        android:textSize="@dimen/small_font"
        android:layout_marginTop="@dimen/large_padding"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_new_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:singleLine="true"
        android:inputType="numberPassword"
        android:nextFocusDown="@id/et_new_pin_repeat"
        android:textColor="@color/textGray"
        android:background="@drawable/border_grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_new_pin_repeated"
        android:textSize="@dimen/small_font"
        android:layout_marginTop="@dimen/large_padding"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_new_pin_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_padding"
        android:singleLine="true"
        android:inputType="numberPassword"
        android:textColor="@color/textGray"
        android:background="@drawable/border_grey"/>

    <TextView
        android:id="@+id/errorPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_font"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/xxl_padding"
        android:textColor="@color/red"/>


    <android.widget.Button
        android:id="@+id/changePin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/xxl_padding"
        android:layout_marginRight="@dimen/xxl_padding"
        android:layout_marginLeft="@dimen/xxl_padding"
        android:background="@drawable/button_drawable"
        android:text="@string/ok"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:textSize="@dimen/small_font" />
</LinearLayout>