<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" /> <!-- Add this permission to use the biometric authentication -->
<!--    <uses-permission android:name="android.permission.USE_BIOMETRIC" /> &lt;!&ndash; Additionally add this permission for older devices with API lower than 28 (Android P) &ndash;&gt;-->
    <!-- suppress DeprecatedClassUsageInspection -->
<!--    <uses-permission android:name="android.permission.USE_FINGERPRINT" />-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MSSDemo"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".view.synchronize.SynchronizeView"
            android:exported="false" />
        <activity
            android:name=".view.splash.SplashView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.faqs.FAQSView"
            android:exported="false" />
        <activity
            android:name=".view.about.AboutView"
            android:exported="false" />
        <activity
            android:name=".view.change_pin.ChangePinView"
            android:exported="false" />
        <activity
            android:name=".view.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".view.change_language.ChangeLanguage"
            android:exported="false" />
        <activity
            android:name=".view.details.UserDetails"
            android:exported="false" />
        <activity
            android:name=".view.otp.generateOtpView"
            android:exported="false" />
        <activity
            android:name=".view.home.HomeView"
            android:exported="false" />
        <activity
            android:name=".view.identification.IdentificationView"
            android:exported="false"></activity>
        <activity
            android:name="com.vasco.digipass.sdk.utils.qrcodescanner.QRCodeScannerSDKActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>